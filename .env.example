# XUI-Manager Configuration
# Скопируйте этот файл в .env и настройте под свои нужды

# ============================================
# ОСНОВНЫЕ НАСТРОЙКИ
# ============================================

# Название приложения
APP_NAME=X-UI Manager
APP_VERSION=1.0.0

# Режим отладки (true/false)
DEBUG=false

# ============================================
# СЕТЕВЫЕ НАСТРОЙКИ
# ============================================

# Хост для прослушивания (0.0.0.0 - все интерфейсы, 127.0.0.1 - только localhost)
HOST=0.0.0.0

# Порт API (по умолчанию 8888)
PORT=8888

# ============================================
# БАЗА ДАННЫХ 3X-UI
# ============================================

# Путь к базе данных X-UI
XUI_DB_PATH=/etc/x-ui/x-ui.db

# Путь к конфигурационному файлу X-UI
XUI_CONFIG_PATH=/usr/local/x-ui/bin/config.json

# ============================================
# БЕЗОПАСНОСТЬ
# ============================================

# API ключ для защиты API (опционально)
# Если установлен, требуется передавать в заголовке X-API-Key
API_KEY=

# ============================================
# ПУТИ К ФАЙЛАМ
# ============================================

# Директория для резервных копий
BACKUP_DIR=/opt/xui-manager/backups

# Файл с шаблонами пользователей
TEMPLATES_FILE=/opt/xui-manager/templates.json

# Файл логов приложения
LOG_FILE=/opt/xui-manager/logs/app.log

# ============================================
# ЛИМИТЫ
# ============================================

# Максимальное количество пользователей для массового создания
MAX_BULK_CREATE=100

# Максимальное количество пользователей для массового удаления
MAX_BULK_DELETE=500
