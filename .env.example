# XUI-Manager Configuration
# Copy this file to .env and configure

# ============================================
# BASIC SETTINGS
# ============================================

APP_NAME=X-UI Manager
APP_VERSION=2.1.0
DEBUG=false

# ============================================
# NETWORK SETTINGS
# ============================================

# Listen host (0.0.0.0 - all interfaces, 127.0.0.1 - localhost only)
HOST=0.0.0.0

# API port (default 8888)
PORT=8888

# ============================================
# 3X-UI DATABASE
# ============================================

# Path to 3x-ui database
XUI_DB_PATH=/etc/x-ui/x-ui.db

# Path to 3x-ui config file
XUI_CONFIG_PATH=/usr/local/x-ui/bin/config.json

# ============================================
# 3X-UI PANEL API
# ============================================

# 3x-ui panel URL (usually localhost)
XUI_PANEL_URL=http://localhost:2053

# 3x-ui admin credentials
XUI_PANEL_USERNAME=admin
XUI_PANEL_PASSWORD=admin

# ============================================
# AUTHENTICATION
# ============================================

# XUI-Manager admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# API key for external access (optional)
API_KEY=

# Session expiry in hours
SESSION_EXPIRE_HOURS=24

# ============================================
# TELEGRAM BOT (Optional)
# ============================================

# Enable Telegram notifications
TELEGRAM_ENABLED=false

# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=

# Admin Telegram IDs (comma-separated)
# Get your ID from @userinfobot
TELEGRAM_ADMIN_IDS=

# Alert cooldown in minutes (prevent spam)
TELEGRAM_ALERT_COOLDOWN=30

# ============================================
# MONITORING
# ============================================

# Enable server health monitoring
MONITOR_ENABLED=true

# Health check interval in seconds
MONITOR_INTERVAL=60

# Consecutive failures before alert
MONITOR_FAILURE_THRESHOLD=3

# What to check
MONITOR_CHECK_XUI_API=true
MONITOR_CHECK_XRAY=true
MONITOR_CHECK_DATABASE=true

# ============================================
# REGIONS
# ============================================

# Default region for templates (RU, CN, IR, GLOBAL)
DEFAULT_REGION=GLOBAL

# Server country (auto-detected if empty)
SERVER_COUNTRY=

# Target user region
TARGET_REGION=

# ============================================
# SITE CHECKER
# ============================================

# Enable site accessibility checking
SITE_CHECK_ENABLED=true

# Check interval in seconds (default 1 hour)
SITE_CHECK_INTERVAL=3600

# Timeout per site in seconds
SITE_CHECK_TIMEOUT=10

# ============================================
# PATHS
# ============================================

BACKUP_DIR=/opt/xui-manager/backups
TEMPLATES_FILE=/opt/xui-manager/templates.json
LOG_FILE=/opt/xui-manager/logs/app.log
SERVER_ID_FILE=/opt/xui-manager/server_id.txt

# ============================================
# LIMITS
# ============================================

MAX_BULK_CREATE=100
MAX_BULK_DELETE=500
MAX_QUEUE_SIZE=5000

# ============================================
# RATE LIMITING
# ============================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================
# UPDATE SERVER
# ============================================

UPDATE_SERVER_PORT=8889
UPDATE_SERVER_USERNAME=admin
UPDATE_SERVER_PASSWORD=admin
